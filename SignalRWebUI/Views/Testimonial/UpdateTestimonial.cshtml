

@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Müşteri Yorum İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<form method="post">

					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Müşteri Yorumu Girişi</div>
						</div>

						<input type="hidden"  asp-for="TestimonialId"/>


						<div class="card-body">
							<div class="form-group">
								<label for="Name">Müşteri Adını Girin</label>
								<input type="text" asp-for="Name" class="form-control" id="Name">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Title">Müşteri Ünvanını Girin</label>
								<input type="text" asp-for="Title" class="form-control" id="Title">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Müşteri Resim Dosya Yolunu Girin</label>
								<input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Comment">Müşteri Yorumunu Giriniz</label>
								<input type="text" asp-for="Comment" class="form-control" id="Comment">
							</div>
						</div>

						<div class="card-action">
							<button class="btn btn-success">Müşteri Yorumunu Güncelle</button>
						</div>
					</div>

				</form>


			</div>

		</div>
	</div>
</div>

