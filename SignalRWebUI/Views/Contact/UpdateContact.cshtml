
@model UpdateContactDto

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<form method="post">

					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Bilgi Güncelleme Sayfası</div>
						</div>

						<input type="hidden"  asp-for="ContactId"/>

						<div class="card-body">
							<div class="form-group">
								<label for="Location">Lokasyonu Giriniz</label>
								<input type="text" asp-for="Location" class="form-control" id="Location">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon Numarası Giriniz</label>
								<input type="text" asp-for="Phone" class="form-control" id="Phone">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mail Adresi</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail" />
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="FooterTitle">Alt Başlık</label>
								<input type="text" asp-for="FooterTitle" class="form-control" id="FooterTitle">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="OpenDays">Açık Günler</label>
								<input type="text" asp-for="OpenDays" class="form-control" id="OpenDays">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="OpenDaysDescription">Açık Günler Açıklaması</label>
								<input type="text" asp-for="OpenDaysDescription" class="form-control" id="OpenDaysDescription">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="OpenHours">Açık Saatler</label>
								<input type="text" asp-for="OpenHours" class="form-control" id="OpenHours">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="FooterDescription">Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="FooterDescription"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">İletişim Bilgi Yazısını Güncelle</button>
						</div>
					</div>

				</form>


			</div>

		</div>
	</div>
</div>